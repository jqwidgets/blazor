<JqxSplitter
    width=850 height=480 orientation=orientation panels=panels>
  <div class="splitter-panel">
    Panel 1
  </div>
  <div class="splitter-panel">
    Panel 2
  </div>
</JqxSplitter>

@code {
    string orientation = "horizontal";
    IDictionary<string, object>[] panels = new Dictionary<string, object>[]
    {
        new Dictionary<string, object>() { { "size", 300 }, { "collapsible", false } },
        new Dictionary<string, object>() { { "size", 100 } }
    };
}
