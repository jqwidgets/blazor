<div style="float: left; font-size: 12px; font-family: Verdana;">
    <h3>Animation Type</h3>
    <JqxRadioButton isChecked="false" onChecked="onNoneChecked">None</JqxRadioButton>
    <JqxRadioButton isChecked="false" onChecked="onSlideChecked">Slide</JqxRadioButton>
    <JqxRadioButton isChecked="true" onChecked="onFadeChecked">Fade</JqxRadioButton>
</div>

<JqxComboBox @ref="comboBox" 
    width="150" height="30" dropDownWidth="200" animationType="animationType" 
    source="source" selectedIndex="0" dropDownHorizontalAlignment="dropDownHorizontalAlignment">
</JqxComboBox>

@code {
    JqxComboBox comboBox;

    string animationType = "fade";
    string dropDownHorizontalAlignment = "right";

    string[] source = new string[20]
