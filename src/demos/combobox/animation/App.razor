    private void onNoneChecked(IDictionary<string, object> e)
    {
        IDictionary<string, object> options = new Dictionary<string, object>()
        {
            { "animationType", "none" }
        };

        comboBox.setOptions(options);
    }

    private void onSlideChecked(IDictionary<string, object> e)
    {
        IDictionary<string, object> options = new Dictionary<string, object>()
        {
            { "animationType", "slide" }
        };

        comboBox.setOptions(options);
    }

    private void onFadeChecked(IDictionary<string, object> e)
    {
        IDictionary<string, object> options = new Dictionary<string, object>()
        {
            { "animationType", "fade" }
        };

        comboBox.setOptions(options);
    }
}

