 <JqxBarGauge @ref="myBarGauge"
    width=350 height=350 relativeInnerRadius=relativeInnerRadius
    values="values" onDrawEnd="onDrawEnd">
</JqxBarGauge>

@code {
    JqxBarGauge myBarGauge;

    double relativeInnerRadius = 0.6;
    double[] values = new double[1] {25};

    private void onDrawEnd(IDictionary<string, object> e)    
    {        
        values[0] = getRandomInt(1, 99);
        
        var task = Task.Run(() => myBarGauge.val(values));
        task.Wait(TimeSpan.FromSeconds(1));
    }

    private int getRandomInt(int min, int max)  
    {  
        Random random = new Random();  
        return random.Next(min, max);  
    }
}

<style>
    body, html {
        width: 100%;
        height: 100%;
    }
</style>