            { "color", "#191970" }
        },
        new Dictionary<string, object>()
        {
            { "startValue", 80 },
            { "endValue", 90 },
            { "color", "#191970" }
        },
        new Dictionary<string, object>()
        {
            { "startValue", 90 },
            { "endValue", 100 },
            { "color", "#191970" }
        }
    };

