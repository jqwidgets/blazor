<label style="font-size: 13px; font-family: Verdana;">
    Hover over the pointer or target for more information.
</label>

<JqxBulletChart 
    width=500 height=100 barSize=barSize title="Student grade"
    description="(in points)" ranges=ranges pointer=pointer
    target=target ticks=ticks showTooltip=true>
</JqxBulletChart>

