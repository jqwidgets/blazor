@inject IJSRuntime JSRuntime;

<h3>House Contract</h3>

<JqxRadioButton onChange="firstBtnOnChange"
    width=width height=height isChecked=true>
    <span>12 Months Contract</span>
</JqxRadioButton>
<JqxRadioButton onChange="secondBtnOnChange"
    width=width height=height>
    <span>6 Months Contract</span>
</JqxRadioButton>
<JqxRadioButton onChange="thirdBtnOnChange"
    width=width height=height>
    <span>3 Months Contract</span>
</JqxRadioButton>
<JqxRadioButton 
    width=width height=height disabled=true>
    <span>1 Month Contract</span>
</JqxRadioButton>

<div style="margin-top: 10px">
    <div>Events:</div>
    <div @ref="events"></div>
</div>

@code {
    ElementReference events;

    int width = 250;
    int height = 25;

    private void firstBtnOnChange(IDictionary<string, object> e)
    {
        bool isChecked = bool.Parse(e["checked"].ToString());
        if (isChecked) 
        {
            JSRuntime.InvokeVoidAsync("Example.updateInnerHtml", events, "<div><span>Checked: 12 Months Contract</span></div>");
        }
        else
        {
            JSRuntime.InvokeVoidAsync("Example.updateInnerHtml", events, "<div><span>Unchecked: 12 Months Contract</span></div>");
        }        
    }

    private void secondBtnOnChange(IDictionary<string, object> e)
    {
        bool isChecked = bool.Parse(e["checked"].ToString());
        if (isChecked) 
        {
            JSRuntime.InvokeVoidAsync("Example.updateInnerHtml", events, "<div><span>Checked: 6 Months Contract</span></div>");
        }
        else
        {
            JSRuntime.InvokeVoidAsync("Example.updateInnerHtml", events, "<div><span>Unchecked: 6 Months Contract</span></div>");
        }  
    }

    private void thirdBtnOnChange(IDictionary<string, object> e)
    {
        bool isChecked = bool.Parse(e["checked"].ToString());
        if (isChecked) 
        {
            JSRuntime.InvokeVoidAsync("Example.updateInnerHtml", events, "<div><span>Checked: 3 Months Contract</span></div>");
        }
        else
        {
            JSRuntime.InvokeVoidAsync("Example.updateInnerHtml", events, "<div><span>Unchecked: 3 Months Contract</span></div>");
        }  
    }
}
