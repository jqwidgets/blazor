<b>Checkbox</b>
<JqxCheckBox width=85 rtl=true>eLearning</JqxCheckBox>
<JqxCheckBox  width=85 rtl=true>Mobile</JqxCheckBox>

<b>Radio Button</b>
<JqxRadioButton width=85 rtl=true>On</JqxRadioButton>
<JqxRadioButton width=85 rtl=true>Off</JqxRadioButton>

<b>DropDown Button</b>
<JqxDropDownButton 
  @ref="myDropDownButton" width=180 height=25 
  rtl=true onComponentReady="onDropDownButtonReady">
  <div>
    <ul>
      <li>Education</li>
      <li>Financial services</li>
      <li>Government</li>
      <li>Manufacturing</li>
      <li>
        Solutions
        <ul>
          <li>eLearning</li>
          <li>Mobile</li>
          <li>RIA</li>
          <li>Training</li>
        </ul>
      </li>
    </ul>
  </div>
</JqxDropDownButton>

<b>Switch Button</b>
<JqxSwitchButton width=100 rtl=true></JqxSwitchButton>

@code {
    JqxDropDownButton myDropDownButton;

    private void onDropDownButtonReady()
    {
        string dropDownContent = "<div style='position: relative; margin-left: 3px; margin-top: 5px;'>DropDownButton</div>";
        myDropDownButton.setContent(dropDownContent);
    }
}

<style>
    .jqx-checkbox, .jqx-radiobutton, .jqx-dropdownlist-state-normal, .jqx-switchbutton {
        margin-top: 5px;
    }
</style>
