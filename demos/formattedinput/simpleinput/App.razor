@inject IJSRuntime JSRuntime;

<JqxFormattedInput @ref="myFormattedInput"
    width=250 height=25 radix=radix
    value=100001 spinButtons=true>
</JqxFormattedInput>

<JqxButton width=175 onClick="getOctal">Get octal value</JqxButton>
<JqxButton width=175 onClick="getDecimal">Get decimal value</JqxButton>
<JqxButton width=175 onClick="getHexadecimal">Get hexadecimal value</JqxButton>

@code {
    JqxFormattedInput myFormattedInput;

    string radix = "binary";

    private void getOctal(IDictionary<string, object> e)
    {
        var octalValue = myFormattedInput.val("octal");
        JSRuntime.InvokeVoidAsync("Example.alert", "Octal value: " + octalValue);
    }

    private void getDecimal(IDictionary<string, object> e)
    {
        var decimalValue = myFormattedInput.val("decimal");
        JSRuntime.InvokeVoidAsync("Example.alert", "Decimal value: " + decimalValue);
    }

    private void getHexadecimal(IDictionary<string, object> e)
    {
        var hexadecimalValue = myFormattedInput.val("hexadecimal");
        JSRuntime.InvokeVoidAsync("Example.alert", "Hexadecimal value: " + hexadecimalValue);
    }
}
