                new Dictionary<string, object>[]
                {
                    new Dictionary<string, object>()
                    {
                        { "dataFieldFrom", "M1_From" },
                        { "dataFieldTo", "M1_To" },
                        { "displayText", "Sprint 1" },
                        { "opacity", 1 }
                    },
                    new Dictionary<string, object>()
                    {
                        { "dataFieldFrom", "M2_From" },
                        { "dataFieldTo", "M2_To" },
