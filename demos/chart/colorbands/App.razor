    {
        { "left", 90 },
        { "top", 0 },
        { "right", 0 },
        { "bottom", 10 }
    };    

    IDictionary<string, object> xAxis = new Dictionary<string, object>()
    {
        { "dataField", "Person" },
        { "unitInterval", 1 },               
        { 
            "tickMarks", 
            new Dictionary<string, object>()
            {
                { "visible", true },
                { "interval", 1 },
                { "color", "#BCBCBC" }
            }
        }
    };

    IDictionary<string, object>[] seriesGroups = new Dictionary<string, object>[]
    {      
        new Dictionary<string, object>() 
        {
            { "orientation", "horizontal" },
            { "type", "rangecolumn" },
            { "columnsGapPercent", 100 },
            {
