  <JqxChart 
      title="Monthly Project Schedule" description="Website update plan"
      showLegend=true enableAnimations=true padding=padding titlePadding=titlePadding
      source=data xAxis=xAxis seriesGroups=seriesGroups colorScheme="scheme03">    
  </JqxChart>
</div>

