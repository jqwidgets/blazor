    IDictionary<string, object>[] data = new Dictionary<string, object>[]
    {
        new Dictionary<string, object>() 
        {
            { "Person", "Planning" }, { "M1_From", 2 }, { "M1_To", 5 }, { "M2_From", 5 }, { "M2_To", 10 }
