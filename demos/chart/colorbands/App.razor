                new Dictionary<string, object>()
                {
                    { "flip", true },
                    { "minValue", 1 },
                    { "maxValue", 30 },
                    { "unitInterval", 1 },
                    { 
                        "title", 
                        new Dictionary<string, object>() { { "text", "Day" } }
