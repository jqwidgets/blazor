<JqxGrid
    width=850 source=source columns=columns columnsresize=true>
</JqxGrid>

@code {

    IDictionary<string, object> source = new Dictionary<string, object>()
    {
        { "datatype", "json" },
        { 
            "dataFields",
            new Dictionary<string, string>[]
            {
                new Dictionary<string, string>() { { "name", "name" }, { "type", "string" } },
                new Dictionary<string, string>() { { "name", "type" }, { "type", "string" } },
                new Dictionary<string, string>() { { "name", "calories" }, { "type", "int" } },
                new Dictionary<string, string>() { { "name", "totalfat" }, { "type", "string" } },
                new Dictionary<string, string>() { { "name", "protein" }, { "type", "string" } }
            }
        },
        { "id", "id" },
        { "url", "./sampledata/beverages.txt" }
    };

    IDictionary<string, object>[] columns = new Dictionary<string, object>[]
    {
        new Dictionary<string, object>() 
        {
            { "text", "Name" }, { "datafield", "name" }, { "width", 250 }
        },
        new Dictionary<string, object>() 
        {
            { "text", "Beverage Type" }, { "datafield", "type" }, { "width", 250 }
        },
        new Dictionary<string, object>() 
        {
            { "text", "Calories" }, { "datafield", "calories" }, { "width", 180 }
        },
        new Dictionary<string, object>() 
        {
            { "text", "Total Fat" }, { "datafield", "totalfat" }, { "width", 120 }
        },
        new Dictionary<string, object>() 
        {
            { "text", "Protein" }, { "datafield", "protein" }, { "minwidth", 120 }
        }
    };
}
