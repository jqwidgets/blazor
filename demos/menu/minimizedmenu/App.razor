  <JqxCheckBox onChange="onChange" isChecked=true>Minimized</JqxCheckBox>

@code {
    JqxMenu myMenu;

    string width = "100%";

    private void onMenuReady()
    {
        myMenu.minimize();
    }

    private void onChange(IDictionary<string, object> e)
    {
        Console.WriteLine(e["checked"]);
        bool isChecked = bool.Parse(e["checked"].ToString());

        if (isChecked)
        {
            Console.WriteLine(1);
            myMenu.minimize();
        }
        else
        {
            Console.WriteLine(2);
            myMenu.restore();
        }
    }
}
