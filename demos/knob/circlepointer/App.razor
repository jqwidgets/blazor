<JqxKnob
    value=60 min=0 max=100 startAngle=120 endAngle=480 
    snapToStep=true rotation=rotation marks=marks labels=labels 
    progressBar=progressBar pointer=pointer>
</JqxKnob>

@code {
    string rotation = "clockwise";
    IDictionary<string, object> marks = new Dictionary<string, object>()
    {
        { 
            "colorRemaining", 
            new Dictionary<string, string>() { { "color", "#373636" }, { "border", "#373636" } }
        },
        { 
            "colorProgress", 
            new Dictionary<string, string>() { { "color", "#373636" }, { "border", "#373636" } }
        }, 
        { "type", "line" }, { "offset", "71%" }, { "thickness", 1 }, { "size", "6%" },
        { "majorSize", "9%" }, { "majorInterval", 10 }, { "minorInterval", 2 }    
    };

    IDictionary<string, object> labels = new Dictionary<string, object>()
    {
        { "offset", "88%" }, { "step", 10 }, { "visible", true }
    };

    IDictionary<string, object> progressBar = new Dictionary<string, object>()
    {        
        { "size", "70%" }, { "offset", "0%" },
        { 
            "background", 
            new Dictionary<string, object>() 
            {
                { "stroke", "#373636" }, { "strokeWidth", 1 },
                { 
                    "fill", 
                    new Dictionary<string, object>() 
                    {
                        { "color", "#a7a7a7" },
                        { "gradientType", "linear" },
                        {
                            "gradientStops",
                            new double[][] { new double[] { 0, 1 }, new double[] { 50, 0.5 }, new double[] { 100, 1 } }
                        }
                    } 
                },
                
            }    
        }
    };

    IDictionary<string, object> pointer = new Dictionary<string, object>()
    {
        { "type", "circle" },
        { 
            "style", 
            new Dictionary<string, object>() 
            { 
                { 
                    "fill", 
                    new Dictionary<string, object>() 
                    {
                        { "color", "#a4a3a3" },
                        { "gradientType", "linear" },
                        {
                            "gradientStops",
                            new double[][] { new double[] { 0, 0.5 }, new double[] { 50, 0.6 }, new double[] { 100, 1 } }
                        }
                    } 
                },
                { "stroke", "#333" }
            }    
        },
        { "size", "10%" }, { "offset", "50%" }
    };
}
