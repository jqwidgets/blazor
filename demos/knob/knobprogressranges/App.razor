<JqxKnob
    value=0 min=0 max=100 step=20 startAngle=120 endAngle=480 
    snapToStep=true rotation=rotation marks=marks labels=labels 
    progressBar=progressBar pointer=pointer spinner=spinner 
    dial=dial dragStartAngle=120 dragEndAngle=420>
</JqxKnob>

@code {
    string rotation = "clockwise";

    IDictionary<string, object> marks = new Dictionary<string, object>()
    {
        { "colorRemaining", "#333" }, { "colorProgress", "#16a15d" },
        { "type", "circle" }, { "offset", "68%" }, { "drawAboveProgressBar", true },
        { "thickness", 1 }, { "size", "2%" }, { "majorSize", "2%" }, { "majorInterval", 20 }, { "minorInterval", 20 }    
    };

    IDictionary<string, object> labels = new Dictionary<string, object>()
    {
        { "offset", "80%" }, { "step", 20 }
    };

    IDictionary<string, object> progressBar = new Dictionary<string, object>()
    {        
        
        { "background", new Dictionary<string, object>() { { "fill", "#eeeeee" } } },
        { "style", new Dictionary<string, object>() { { "fill", "#16a15d" }, { "opacity", 0.4 } } },
        { 
            "ranges",
            new Dictionary<string, object>[]
            {
                new Dictionary<string, object>() { { "startValue", 0 }, { "endValue", 20 }, { "fill", "#12b24e" } },
                new Dictionary<string, object>() { { "startValue", 20 }, { "endValue", 40 }, { "fill", "#2ec544" } },
                new Dictionary<string, object>() { { "startValue", 40 }, { "endValue", 60 }, { "fill", "#ffff3b" } },
                new Dictionary<string, object>() { { "startValue", 60 }, { "endValue", 80 }, { "fill", "#f4a620" } },
                new Dictionary<string, object>() { { "startValue", 80 }, { "endValue", 100 }, { "fill", "#f2121c" } }
            }
        },
        { "size", "7%" }, { "offset", "56%" },
    };

    IDictionary<string, object> pointer = new Dictionary<string, object>()
    {
        { "type", "arrow" },
        { "style", new Dictionary<string, object>() { { "fill", "#666" } } },
        { "size", "63%" }, { "offset", "0%" }, { "thickness", 7 }
    };

    IDictionary<string, object> spinner = new Dictionary<string, object>()
    {
        { "style", new Dictionary<string, object>() { { "fill", "#666" } } },
        { "innerRadius", "0%" }, { "outerRadius", "3%" }, { "startAngle", 0 }, { "endAngle", 360 }
    };

    IDictionary<string, object> dial = new Dictionary<string, object>()
    {
        { "style", new Dictionary<string, object>() { { "fill", "#eee" } } },
        { "innerRadius", "68%" }, { "outerRadius", "92%" }, { "startAngle", 0 }, { "endAngle", 360 }
    };
}
